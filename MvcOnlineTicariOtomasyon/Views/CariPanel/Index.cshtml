@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cari
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />

<h2>Cari Bilgi Paneli</h2>

<br />
@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
{
<table id="" class="table table-hover">

    <tr>
        <td><label>Mail Adresi: @HttpContext.Current.User.Identity.Name</label></td>
    </tr>
    <tr>
        <td>@Html.LabelFor(x => x.CariAd) @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(x => x.CariSoyad) @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(x => x.CariSehir) @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(x => x.CariSifre)  @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })</td>
    </tr>
    
</table>
    <button class="btn btn-warning">Bilgilerimi Güncelle</button>
}

